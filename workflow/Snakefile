        e="logs/methylartist/{patient}/{label}.{sampleid}.err",
    benchmark:
        "logs/methylartist/{patient}/{label}.{sampleid}.bmk"
    params:
        reg=get_region,
    conda: "envs/methylartist.yaml"
    threads: get_resource("methylartist", "threads"),
    resources:
        mem_mb=get_resource("methylartist", "mem_mb"),
        runtime=get_resource("methylartist", "runtime"),
        slurm_partition=get_resource("methylartist", "partition"),
    shell:"""
        methylartist locus \
                -b {input.bam} \
                -g {input.ann} \
                -p {threads} \
                -n CG \
                --labelgenes \
                -r {input.ref} \
                --phased \
